<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:radius="8dp"
    android:elevation="4dp"
    android:layout_marginEnd="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorBackgroundPrimary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorBackgroundPrimary">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_home_events_img"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_home_events_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Legend? Go! Friends? Go!"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_home_events_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/colorTextPrimary"
            tools:text="Sun 18 Oct"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_home_events_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/colorTextPrimary"
            tools:text="Cinnabar Island"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
